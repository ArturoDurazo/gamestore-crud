<!--Catch the object sent by the controller-->
@model IEnumerable<game_store_demo.Models.VideoGame>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Videogame List</h2>
        </div>
        <div class="col-6 text-right" >
            <a asp-controller="VideoGame" asp-action="Create" class="btn btn-primary">
                Insert New Videogame
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Videogame Name
                    </th>
                    <th>
                        Console
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="22%">@obj.Name</td>
                    <td width="22%">@obj.Console</td>
                    <td width="22%">@obj.Quantity</td>
                    <td width="22%">@obj.Price</td>
                    <td class="text-center">
                        <div class="w-60 btn-group" role="group">
                            <a asp-controller="VideoGame"asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="VideoGame" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }



            </tbody>
        </table>
    }
    else { 
        <p>No Videogames exist</p>
    }

</div>

